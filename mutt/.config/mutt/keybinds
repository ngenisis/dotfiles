# Navigation keybinds
bind index			j	next-entry
bind pager			j	next-line
bind index			k	previous-entry
bind pager			k	previous-line
bind index,pager	g	noop
bind index			gg	first-entry
bind pager			gg	top
bind index			G	last-entry
bind pager			G	bottom
bind index			H	top-page
bind index			M	middle-page
bind index			L	bottom-page
bind index			zt	current-top
bind index			zz	current-middle
bind index			zb	current-bottom
bind index,pager	\Cd	half-down
bind index,pager	\Cu	half-up
bind index,pager	\Cf	next-page
bind index,pager	\Cb	previous-page
bind index,pager	/	search
bind index,pager	?	search-reverse
bind index,pager	n	search-next
bind index,pager	N	search-opposite

# Mail keybinds
bind index,pager	m	mail
bind index,pager	d	delete-message
bind index,pager	u	undelete-message
bind index,pager	r	reply
bind index,pager	R	group-reply
bind index,pager	f	forward-message
bind index,pager	o	change-folder
bind index			zo	collapse-thread
bind index			za	collapse-thread
bind index			zc	collapse-thread
bind index			zO	collapse-all
bind index			zA	collapse-all
bind index			zC	collapse-all
bind index			s	sync-mailbox
bind index			S	save-message

# Mutt keybinds
bind index			h	help
bind index			\Cl	refresh
bind index			q	exit
bind index			v	tag-entry
bind index			\;	tag-prefix
bind index			:	enter-command
bind index			$	shell-escape
