# preferred order of MIME parts
	alternative_order text/plain text/enriched text/html
# no dashes before signature
	set sig_dashes=no
# allow editing headers of outgoing messages
	set edit_headers
# do not move read files to $mbox
	set move=no
# don't go onto the next e-mail at end of pager
	set pager_stop=yes
# ask for carbon-copy recipients for outgoing messages
	set askcc=yes
# beep on new message
	set beep_new=yes
# attach forwarded message as separate MIME part
	set mime_forward=ask-yes
# check for new messages at least once a minute
	set timeout=60
# ignore all header fields by default
	ignore *
# fields to not ignore
	unignore from: subject to cc mail-followup-to date x-mailer x-url
# order to display header fields
	hdr_order From To Cc Date Subject
# don't display line wrap markers
	set markers=no
# show two lines of context
	set pager_context=2
# automatically view html attachments
	set mailcap_path = ~/.mutt/mailcap
	auto_view text/html
# delete messages marked for deletion when closing or synchronizing a mailbox
	set delete=yes
# group messages by threads
	set sort=threads
# sort threads by date of last message received
	set sort_aux=last-date-received
# <status> <date> <sender> <thread length> <subject>
	set index_format="%Z %[%d %b] %-15.15F %2M %s"
# Collapse all threads when entering a folder
	folder-hook . 'push <collapse-all>'
# Do not collapse threads with unread messages
	set collapse_unread=no
# Uncollapse threads when new messages are received
	set uncollapse_new=yes

# Color
	# Information
		color attachment brightmagenta default
		color hdrdefault brightmagenta default
		color signature brightmagenta default
		color status brightmagenta default
		color tree brightmagenta default
	# Warnings
		color error brightred default
		color message brightred default
	# Bright blue
		color quoted brightblue default
		color body brightblue default "(ftp|http|https)://[^ ]+"
		color body brightblue default "[-a-z_0-9.+]+@[-a-z_0-9.]+"
	# Selections
		color indicator black brightblue
		color search black brightblue
		color underline black brightblue
	# Identifiers
		color header brightgreen default "^(From|Subject|To|Date|Cc):"
	# Message status
		color index brightred default ~D
		color index brightgreen default ~N

# Other configuration files
	source $HOME/.config/mutt/accounts/work
	source $HOME/.config/mutt/keybinds
