# preferred order of MIME parts
	alternative_order text/plain text/enriched text/html
# no dashes before signature
	set sig_dashes=no
# allow editing headers of outgoing messages
	set edit_headers
# do not move read files to $mbox
	set move=no
# don't go onto the next e-mail at end of pager
	set pager_stop=yes
# ask for carbon-copy recipients for outgoing messages
	set askcc=yes
# beep on new message
	set beep_new=yes
# attach forwarded message as separate MIME part
	set mime_forward=ask-yes
# check for new messages at least once a minute
	set timeout=60
# ignore all header fields by default
	ignore *
# fields to not ignore
	unignore from: subject to cc mail-followup-to date x-mailer x-url
# order to display header fields
	hdr_order From To Cc Date Subject
# don't display line wrap markers
	set markers=no
# show two lines of context
	set pager_context=2
# automatically view html attachments (in w3m, see ~/.mailcap)
	auto_view text/html
# delete messages marked for deletion when closing or synchronizing a mailbox
	set delete=yes

# Color
	color hdrdefault magenta default
	color quoted brightblue default
	color signature red default
	color indicator brightgreen blue
	color error brightred default
	color status black white
	color tree magenta default      # the thread tree in the index menu
	color tilde magenta default
	color message brightcyan default
	color markers brightcyan default
	color attachment brightmagenta default
	color search default green      # how to highlight search patterns in the pager

	color header brightmagenta default ^(From|Subject|To|Date|Cc):
	color body red default "(ftp|http|https)://[^ ]+"   # point out URLs
	color body red default [-a-z_0-9.+]+@[-a-z_0-9.]+    # e-mail addresses
	color underline brightgreen default

# Other configuration files
	source $HOME/.mutt/accounts/work
	source $HOME/.mutt/keybinds
